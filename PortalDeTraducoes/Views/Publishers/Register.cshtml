<form asp-controller="Publisher" asp-action="Register" method="post">

    <input type="hidden" id="ID" name="ID" value="0" />

    <div class="form-group">
        <label for="name">Nome da distribuidora</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Publisher name" />
    </div>
    <div class="form-group">
        <label for="imageUrl">Url da logo da distriuidora</label>
        <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" placeholder="Publisher image url" />
    </div>
    <input type="submit" class="btn btn-primary" value="Salvar" />
</form>
