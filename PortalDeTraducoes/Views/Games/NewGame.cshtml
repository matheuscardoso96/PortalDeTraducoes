@model GameInputModel

<form asp-controller="Games" asp-action="RegisterGame" method="post">

    <div class="form-group">
        <label for="CovertArtUrl">Url da capa</label>
        <input class="form-control" asp-for="CovertArtUrl" placeholder="Capa do jogo" />
    </div>

    <div class="form-group">
        <label for="Title">Título</label>
        <input class="form-control" asp-for="Title" placeholder="Game Title" />
    </div>
    <div class="form-group">
        <label for="ReleaseDate">Data de Lançamento</label>
        <input class="form-control" asp-for="ReleaseDate"/>
    </div>
    <div class="form-group">
        <label for="Genres">Gêneros</label>
        <div class="form-group">
            @Html.DropDownList("GenresId", (MultiSelectList)ViewBag.Genres, new { multiple = "multiple" })
        </div>
    </div>
    <div>
        <label for="Developers">Desenvolvedores</label>
        <input class="form-control" asp-for="Developers" placeholder="Desenvolvedores sepados por vírgula" />
    </div>
    <div class="form-group">
        <label for="Publishers">Distribuidoras</label>
        <input class="form-control" asp-for="Publishers" placeholder="Distribuidoras sepados por vírgula" />
    </div>
    <div class="form-group">
        @Html.DropDownList("PlatformsId", (MultiSelectList)ViewBag.Platforms, new { multiple = "multiple" })
    </div>

    <input type="submit" class="btn btn-primary" value="Salvar" />


</form>

@section scripts
{
    <script>

        $(function () {
            $("#Developers").autocomplete({
                source: "/Games/GetDevelopers",
                minLength: 3,

            });
        });

        $(function () {
            $("#Publishers").autocomplete({
                source: "/Games/GetPublishers",
                minLength: 3,

            });
        });


    </script>




}